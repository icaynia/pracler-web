<div class="container" style="margin-top:30px;">
  <div class="row">
    <div class="col-lg-8">
      <div class="bs-component">
        <div class="content-tabs">
           <div id="myTabContent" class="tab-content">   
            <div class="tab-pane fade active in" id="info">
              <!--<div class="youtube">
                <div id="contentplayer"></div>
                </div>-->
              <h3>정보</h3>
              <blockquote>
                <p>
            <%= data.description %>
                   </p>
                <!--<small>From <cite title="Source Title">https://ja.wikipedia.org/wiki/%E6%81%8B_(%E6%98%9F%E9%87%8E%E6%BA%90%E3%81%AE%E6%9B%B2)</cite></small>-->
              </blockquote>
            </div>
            <div class="tab-pane fade" id="profile">
              <div style="width:100%; height:1000px"></div>
            </div>
            <div class="tab-pane fade" id="like">
              <div style="width:100%; height:1000px"></div>
            </div>
            <div class="tab-pane fade" id="today">
              <div style="width:100%; height:1000px"></div>
            </div>
          </div>
        </div>
      </div>
    </div>
    <div class="col-lg-4">
      <div class="bs-component">
        <a href="#" id="youtube-play-layout" class="btn btn-danger btn-lg btn-block" style="margin-bottom: 25px">재생 </a>
        
        <a href="/song/<%= param.artist %>/<%= param.album %>/<%= param.music %>?mode=edit" id="btn_edit" class="btn btn-default btn-lg btn-block" style="margin-bottom: 25px">편집</a>
        
                            
                    <% if(data.lyrics) { %>
                        <div class="panel panel-success">
                            <div class="panel-heading">
                                <h3 class="panel-title">가사</h3>
                            </div>
                            <div class="panel-body">
                                <%= data.lyrics %>
                            </div>
                        </div>
                    <% } %> 



      </div>
    </div>
  </div>
</div>


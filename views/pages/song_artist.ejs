<script language="javascript">
  document.title = "<%= data.artist %> :: pracler";

  $(function() {
    getHistoryCount();
    
    function getHistoryCount()
    {
      var url = "/api/history/count/music/<%= data.artist %>";
      
      $.ajax({
        url: url,
        type: 'GET',
        dataType: 'html',
        success: function(result) {
          $('#count').html(result);
          
        }
      });	
    }
  })
</script>


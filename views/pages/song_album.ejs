<div class="song-info">
  <div class="container">
    <div style="white-space: nowrap;">
      <div style="float:left;min-width:100px; width: auto !important; width: 100px;">
        <img class="music_image"  src="<%= data.album_image_url %>"></div>
      </div>
      <div style="float:left;min-width:100px; width: auto !important; width: 100px;">
        <div style="margin-left: 30px">
          <h4 style="word-break: keep-all;"><a href="/song/<%= data.artist %>"><%= data.artist %></a></h4>
          <% if (data.album != '_') { %>
          
          <h2 style="word-break: keep-all;"><%= data.album %> <% if (data.verified) { %><i class="fa fa-check" aria-hidden="true"></i><% } %></h2></h2>
          <% } %>
        </div>
      </div>
    </div>

    </br>

  </div>
</div>

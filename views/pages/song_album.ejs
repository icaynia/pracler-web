<div class="container" style="margin-top:30px;">
  <div class="row">
    <div class="col-lg-8">
      <div class="bs-component">
        <div class="content-tabs">
          <div id="myTabContent" class="tab-content">
            <div class="tab-pane fade active in" id="info">
              <h3>정보</h3>
              <div id="description" class="description view-markup">
                  
              </div>
            </div>
            <div class="tab-pane fade" id="profile">
              <div style="width:100%; height:1000px"></div>
            </div>
            <div class="tab-pane fade" id="like">
              <div style="width:100%; height:1000px"></div>
            </div>
            <div class="tab-pane fade" id="today">
              <div style="width:100%; height:1000px"></div>
            </div>
          </div>
        </div>
      </div>
    </div>
    <div class="col-lg-4">
      <div class="bs-component">
        <a href="/song/<%= param.artist %>/<%= param.album %>?mode=edit" id="btn_edit" class="btn btn-default btn-lg btn-block" style="margin-bottom: 25px">편집</a>
        
        <a href="#" class="btn btn-danger btn-lg btn-block" style="margin-bottom: 25px"> ▶&nbsp;&nbsp; Youtube에서 보기</a>
        <div class="panel panel-success">
          <div class="panel-heading">
            <h3 class="panel-title">Panel success</h3>
          </div>
          <div class="panel-body">
            Panel content
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

